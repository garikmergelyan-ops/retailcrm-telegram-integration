# RetailCRM настройки
RETAILCRM_URL=https://your-domain.retailcrm.ru
RETAILCRM_API_KEY=your_api_key_here

# Telegram настройки
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHANNEL_ID=@your_channel_name

# Настройки сервера
PORT=3000
WEBHOOK_SECRET=your_webhook_secret_here

# Валюта (GHS - ганский седи)
CURRENCY=GHS

# ============================================
# АККАУНТ 1 (Ghana) - Основной аккаунт
# ============================================
# Можно использовать старые переменные без суффикса (для обратной совместимости)
# Или с суффиксом _1 (рекомендуется)
RETAILCRM_URL_1=https://your-domain-1.retailcrm.ru
RETAILCRM_API_KEY_1=your_api_key_1_here
TELEGRAM_CHANNEL_ID_1=@your_channel_1_name
CURRENCY_1=GHS

# ============================================
# АККАУНТ 2 - Второй аккаунт (опционально)
# ============================================
RETAILCRM_URL_2=https://your-domain-2.retailcrm.ru
RETAILCRM_API_KEY_2=your_api_key_2_here
TELEGRAM_CHANNEL_ID_2=@your_channel_2_name
CURRENCY_2=USD

# ============================================
# АККАУНТ 3 (SlimTeaPro) - Третий аккаунт
# ============================================
RETAILCRM_URL_3=https://slimteapro-store.retailcrm.ru
RETAILCRM_API_KEY_3=your_api_key_3_here
# Если не указан TELEGRAM_CHANNEL_ID_3, будет использован канал Account 1
TELEGRAM_CHANNEL_ID_3=@your_channel_name
CURRENCY_3=GHS

# ============================================
# КОНФИГУРАЦИЯ ПОВЕДЕНИЯ (опционально)
# ============================================
# Интервал проверки заказов (в миллисекундах, по умолчанию 300000 = 5 минут)
# POLLING_INTERVAL=300000

# Окно времени для approved заказов (в часах, по умолчанию 48)
# APPROVED_WINDOW_HOURS=48

# Окно времени для sent to delivery заказов (в минутах, по умолчанию 10)
# SENT_TO_DELIVERY_WINDOW_MINUTES=10

# Максимальное количество страниц для approved заказов (по умолчанию 3)
# MAX_PAGES_APPROVED=3

# Максимальное количество страниц для sent to delivery (по умолчанию 2)
# MAX_PAGES_SENT_TO_DELIVERY=2

# Таймзона для отображения времени (по умолчанию Africa/Accra)
# TIMEZONE=Africa/Accra

# Таймаут для API запросов (в миллисекундах, по умолчанию 60000 = 60 секунд)
# API_TIMEOUT=60000

# Задержка между страницами (в миллисекундах, по умолчанию 1000 = 1 секунда)
# DELAY_BETWEEN_PAGES=1000

# Задержка между аккаунтами (в миллисекундах, по умолчанию 3000 = 3 секунды)
# DELAY_BETWEEN_ACCOUNTS=3000

# Время жизни кэша операторов (в миллисекундах, по умолчанию 3600000 = 1 час)
# OPERATOR_CACHE_TTL=3600000

# Настройки интеграции
# Система использует фильтрацию на стороне сервера для получения approved заказов
# с защитой от дубликатов и оптимизацией производительности
