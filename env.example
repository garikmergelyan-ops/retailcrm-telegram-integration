# RetailCRM настройки
RETAILCRM_URL=https://your-domain.retailcrm.ru
RETAILCRM_API_KEY=your_api_key_here

# Telegram настройки
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHANNEL_ID=@your_channel_name

# Настройки сервера
PORT=3000
WEBHOOK_SECRET=your_webhook_secret_here

# Валюта (GHS - ганский седи)
CURRENCY=GHS

# Настройки интеграции
# Количество дней для проверки заказов (по умолчанию 30)
# Увеличьте если нужно проверять более старые заказы
ORDERS_DAYS_TO_CHECK=30

# Максимальное количество страниц для проверки (по умолчанию 10)
# Ограничивает нагрузку на API при большом количестве заказов
MAX_PAGES_TO_CHECK=10
